<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="630dp"
    android:orientation="vertical"
    android:background="@color/HalfCream"
    tools:context=".ui.defaultmain.DefaultFragment" >

    <TextView
        android:id="@+id/default_restaurant_name"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/DarkSienna"
        android:paddingTop="8dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp"
        android:textColor="@color/Cultured"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="TextView" />

    <ImageView
        android:id="@+id/default_restaurant_imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/RichBlackFOGRA39"
        android:scaleType="center"
        android:src="@drawable/no_image"
        android:visibility="visible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical" />
    </ScrollView>

</LinearLayout>