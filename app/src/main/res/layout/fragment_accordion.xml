<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/shape_fragment">

        <ImageButton
            android:id="@+id/ibtnArrow"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginStart="310dp"
            android:layout_marginTop="25dp"
            android:scaleType="fitXY"
            android:background="@color/DarkSienna"
            android:src="@drawable/arrow1" />

        <TextView
            android:id="@+id/txtAccordion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textSize="24sp"
            android:textColor="@color/Cultured"
            android:text="TextView" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/contents_area_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtContents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/RichBlackFOGRA39"
             />
    </LinearLayout>
</LinearLayout>