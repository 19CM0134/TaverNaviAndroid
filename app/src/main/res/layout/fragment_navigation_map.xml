<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="630dp"
    android:orientation="vertical"
    android:background="@color/HalfCream"
    tools:context=".ui.defaultmap.MapFragment" >

    <TextView
        android:id="@+id/map_restaurant_name"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/DarkSienna"
        android:paddingTop="8dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp"
        android:textColor="@color/Cultured"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="TextView" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/navMapView"
        android:layout_width="match_parent"
        android:layout_height="480dp" />

    <TextView
        android:id="@+id/map_restaurant_address"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/DarkSienna"
        android:paddingTop="8dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp"
        android:textColor="@color/Cultured"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="TextView" />

</LinearLayout>